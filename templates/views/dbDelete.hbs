{{>pageHeader}}
{{>header}}

<div class="jumbotron centered">
  <div class="container">
    <h1 class="display-6">Database Admin : {{subTitle}} </h1>

    <div class="row">
      <div class="col-sm">

        <div class="card">
          <!-- <div class="card-header">
            <h2 class="">Database Destruction</h2>
          </div> -->

          <div class="card-body">
            <form name="myForm" action="/dbdelete" method="post" onsubmit="return validateForm()">
              <div class="form-group">

                <div class="input-group">
                  <label for="text" class="control-label">Database</label>
                  <div class="col-sm">
                    <input type="text" class="form-control" name="dbname" autofocus>
                  </div>
                </div>

                <p>Confirmation</p>

                <div class="">
                  <input id="confirmbox" type="checkbox" name="confirmbox" value="confirm">
                  <label for="confirm" class="">Confirm database deletion</label>
                </div>

              </div>

              <button id="delete" type="submit" name="delete" class="btn btn-outline-danger btn-lg disabled" disabled onclick="handleClick(this);">Delete</button>
              <button type="submit" name="cancel" value="1" class="btn btn-outline-success btn-lg" onclick="handleClick(this);">Abort</button>
            </form>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>

<script src="/js/confirm.js"></script>
<script src="/js/validate.js"></script>

{{>footer}}
