{{>pageHeader}}
{{>header}}

<div class="jumbotron centered">
  <div class="container">
    <h1 class="display-6">Load Transactions</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /login route -->
            <form name="myForm" action="/loadtrans" method="POST" onsubmit="return validateForm()">
              <div class="input-group">
                <label for="text" class="control-label">Filename</label>
                <div class="col-sm">
                  <input type="text" class="form-control" name="filename" placeholder="Transactions.csv" autofocus autocomplete="off">
                </div>
              </div>

              <!-- <div class="form-group">
                <label for="text">Filename</label>
                <input type="text" class="form-control" name="filename" autofocus autocomplete="off">
              </div> -->

              <button type="submit" class="btn btn-outline-primary btn-lg" onclick="handleClick(this);">Load</button>
              <button type="submit" name="cancel" value="1" class="btn btn-outline-danger btn-lg" onclick="handleClick(this);">Cancel</button>
            </form>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<script src="/js/validate.js"></script>

{{>footer}}
